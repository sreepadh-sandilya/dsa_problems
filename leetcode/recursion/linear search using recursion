#include<iostream>
using namespace std;

bool isSorted(int arr[], int size,int k) {

    //base case
    if(size == 0 ){
        return false;
    }
    if(arr[0]==k)
    {
        return true;
    }
    return isSorted(arr+1,size-1,k);
    

    

}

int main() {

    int arr[5] = {2,4,9,10,9};
    int size = 5;

    bool ans = isSorted(arr, size,8);

    if(ans){
        cout << "Array has" << endl;
    }
    else {
        cout << "Array don't" << endl;
    }

    return 0;
}


class Solution {
  public:
    bool check(int *arr,int n){
        if(n==0 || n==1)
        {
            return true;
        }
        if(arr[0]>arr[1])
        {
            return false;
        }
        else
        {
            check(arr+1,n-1);
        }
    }
    bool arraySortedOrNot(int arr[], int n) {
        // code here
        
        check(arr,n);
    }
};
