
// brute force solution
class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        stack<pair<int,int>>st;
        int n=matrix.size(),m=matrix[0].size();
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<m;j++)
            {
                if(matrix[i][j]==0){
                st.push(make_pair(i,j));
                }
            }
        }

        while(!st.empty())
        {
            pair<int,int>p=st.top();
            st.pop();
            int i=p.first;
            int j=p.second;
            for(int l=0;l<m;l++)
            {
                matrix[i][l]=0;
            }
            for(int l=0;l<n;l++)
            {
                matrix[l][j]=0;
            }
        }
        
        
    }
};
